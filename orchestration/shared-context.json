        "cacheStrategies": {
            "static": {
                "staleTime": "Infinity",
                "gcTime": 600000,
                "description": "Never refetch (configuration, etc.)"
            },
            "slow": {
                "staleTime": 300000,
                "gcTime": 600000,
                "description": "5 minute stale time (user profiles, project details)"
            },
            "medium": {
                "staleTime": 60000,
                "gcTime": 300000,
                "description": "1 minute stale time (activity feeds, milestones)"
            },
            "fast": {
                "staleTime": 0,
                "gcTime": 60000,
                "description": "Always refetch (real-time data, search)"
            }
        },
        "apiEndpoints": {
            "maintainer": {
                "profile": "/api/maintainer/{id}",
                "activity": "/api/maintainer/{id}/activity",
                "sentiment": "/api/maintainer/{id}/sentiment",
                "cv": "/api/maintainer/{id}/cv"
            },
            "milestones": {
                "list": "/api/milestones",
                "detail": "/api/milestones/{id}",
                "generate": "/api/milestones/{id}/generate-post"
            },
            "projects": {
                "search": "/api/projects/search",
                "detail": "/api/projects/{id}",
                "filters": "/api/projects/filters"
            }
